<% layout('layouts/default') %>

<% if (typeof(job) != 'undefined') { %>
<%- partial('overlays/task-details', {IsVisible: true, HasAction: "selecteren"}) %>
<% } %>

<div class="section section--header section--header-circles">
  <div class="container container--image">
    <div class="row">
      <div class="col-sm-4 col-md-4 col-6">
        <h1>Klusaanbod: van stucen tot  kraan vervangen</h1>
        <p>
          Elke klusser van ZoOpgelost is weer goed in iets anders. De een stuct uw muren spiegelglad en de ander repareert uw lekkende kraan. Bekijk hieronder alle klusjes die we voor u kunnen klaren.
        </p>
      </div>
    </div>
    <img src="/assets/images/section__header-image--tools.svg" alt="" class="section__header-image section__header-image--tools">
  </div>
</div>

<div class="section section--alternative">
  <div class="container">
    <div class="row">
      <div class="col-8 col-md-8 col-sm-4">
        <%- partial('partials/job-overview', {categories}) %>
      </div>
      <div class="col-offset-lg-1 col-offset-xl-1 col-lg-3 col-xl-3 col-sm-4 col-offset-md-1 col-md-6">
        <%- partial('partials/contact-tile') %>
      </div>
    </div>
  </div>
</div>


