<div class="job-selection">
  <form class="form job-selection__form" data-target="">
    <div class="form__group">
      <i class="icon-magnifying-glass form__control-icon"></i>
      <input type="text" placeholder="Zoek je klus" class="form__control"/>
    </div>
  </form>

  <%- partial('components/filter-list')%>

  <div class="job-selection__jobs">
    <ul class="job-list">
      <% categories.forEach(category => { %>
      <% category.Jobs.forEach(job => { %>
      <li class="job-list__item" data-category-id="<%= category.IdJobCategory %>">
        <a href="" class="job-list__link" data-job-id="<%= job.IdJob %>"><%= job.Description %></a>
      </li>
      <% }) %>
      <% }); %>
    </ul>
  </div>
</div>
